download http://www.multiprecision.org/mpc/download/mpc-0.9.tar.gz
rm -rf "$S/mpc-$pkgver"
extract mpc-$pkgver.tar.gz
cd "$S/mpc-$pkgver"

CC="$CC -static -L$R/opt/devel/lib -I$R/opt/devel/include" \
	./configure --prefix=/opt/devel --disable-shared
make -j$MAKE_THREADS
make DESTDIR="$P/package-libmpc" install
cd $P/package-libmpc
tar jvcf "$P/libmpc-$pkgver-$A-$pkgrev.tbz" *
