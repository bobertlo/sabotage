download http://www.etalabs.net/musl/releases/musl-0.8.10.tar.gz
rm -rf "$S/musl-0.8.10"
extract musl-0.8.10.tar.gz
cd "$S/musl-0.8.10"

cp "$H/core/musl/config.mak" .

TC_PATH=$R/opt/devel

make CC="gcc" -j$MAKE_THREADS

mkdir -p "$P/package-musl"
make DESTDIR="$P/package-musl" install
cd "$P/package-musl"
tar jcvf "$P/musl-$pkgver-$A-$pkgrev.tbz" *
