download http://dl.suckless.org/tools/9base-6.tar.gz
extract 9base-6.tar.gz
cd "$S/9base-6"

echo CC="/$BS/bin/musl-gcc -static -D_GNU_SOURCE -DPLAN9PORT -idirafter /usr/include" >>config.mk
echo "PREFIX=/$BS" >>config.mk

sed -i 's/__linux__/__not_linux__/;s/__sun__/__linux__/' lib9/dirread.c
sed -i '/sys.termios.h/d' lib9/readcons.c

make -j$MAKE_THREADS -C lib9
make -j$MAKE_THREADS -C mk

make -C mk install
