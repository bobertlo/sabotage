download http://ftpmirror.gnu.org/gmp/gmp-$pkgver.tar.bz2
rm -rf "$S/gmp-$pkgver"
extract gmp-$pkgver.tar.bz2
cd "$S/gmp-$pkgver"

./configure --prefix=/opt/devel --disable-shared
make -j$MAKE_THREADS

PKGDIR="$P/package-libgmp"
mkdir -p "$PKGDIR"
make DESTDIR="$PKGDIR" install
rm -f "$PKGDIR/opt/devel/lib/libgmp.la"
cd "$PKGDIR"
tar jcvf "$P/libgmp-$pkgver-$A-$pkgrev.tbz" *

