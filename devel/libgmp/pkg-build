download http://ftpmirror.gnu.org/gmp/gmp-$pkgver.tar.bz2
rm -rf "$S/gmp-$pkgver"
extract gmp-$pkgver.tar.bz2
cd "$S/gmp-$pkgver"

CC="$CC -static -L/opt/devel/lib -I/opt/devel/include" \
	./configure -C --prefix=/opt/devel --disable-shared
make -j$MAKE_THREADS

mkdir -p "$P/package-libgmp"
make DESTDIR="$P/package-libgmp" install
cd "$P/package-libgmp"
tar jcvf "$P/libgmp-$pkgver-$A-$pkgrev.tbz" *

