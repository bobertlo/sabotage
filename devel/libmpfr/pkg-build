download http://ftp.gnu.org/gnu/mpfr/mpfr-3.0.1.tar.bz2
rm -rf "$S/mpfr-$pkgver"
extract mpfr-$pkgver.tar.bz2
cd "$S/mpfr-$pkgver"

./configure --prefix=/opt/devel --disable-shared
make -j$MAKE_THREADS

PKGDIR="$P/package-libmpfr"
make DESTDIR="$PKGDIR" install
rm -f "$PKGDIR/opt/devel/lib/libmpfr.la"
cd "$PKGDIR"
tar jcvf "$P/libmpfr-$pkgver-$A-$pkgrev.tbz" *


