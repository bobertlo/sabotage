download http://ftp.gnu.org/gnu/mpfr/mpfr-3.0.1.tar.bz2
rm -rf "$S/mpfr-$pkgver"
extract mpfr-$pkgver.tar.bz2
cd "$S/mpfr-$pkgver"

CC="$CC -static -L$R/opt/devel/lib -I$R/opt/devel/include" \
	./configure --prefix=/opt/devel
make -j$MAKE_THREADS
make DESTDIR="$P/package-libmpfr" install
cd "$P/package-libmpfr"
tar jcvf "$P/libmpfr-$pkgver-$A-$pkgrev.tbz" *


