download http://www.etalabs.net/musl/releases/musl-0.8.10.tar.gz
rm -rf "$S/musl-0.8.10"
extract musl-0.8.10.tar.gz
cd "$S/musl-0.8.10"

cp "$origin/config.mak" .

TC_PATH=$R/opt/devel

make CC="gcc" -j$MAKE_THREADS

mkdir -p "$P/package-libmusl"
make DESTDIR="$P/package-libmusl" install
cd "$P/package-libmusl"
tar jcvf "$P/libmusl-$pkgver-$A-$pkgrev.tbz" *
